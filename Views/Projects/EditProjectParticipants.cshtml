@model BuffteksWebsite.Models.EditProjectDetailViewModel

@{
    ViewData["Title"] = "Edit";
    Model.ProjectID = Model.TheProject.ID;
}

<h2>Edit</h2>

<h4>Project Particpants - Add Participants to Project: @Model.TheProject.ProjectName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Projects" asp-action="AddProjectClientParticipant" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectID" />
            <div class="form-group">
                <label asp-for="SelectedID" class="control-label">Select from Clients</label>
                <select asp-for="SelectedID" asp-items="Model.ProjectClientsList"></select> 
                <span class="text-danger">TODO: We need to show an exclusive list of clients not already on the project</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Select New Client for Project" class="btn btn-default" />
            </div>
        </form>
        <form asp-controller="Projects" asp-action="AddProjectMemberParticipant" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectID" />            
            <div class="form-group">
                <label asp-for="SelectedID" class="control-label">Select from Members</label>
                <select asp-for="SelectedID" asp-items="Model.ProjectMembersList"></select> 
                <span class="text-danger">TODO: We need to show an exclusive list of members not already on the project</span>                
            </div>
            <div class="form-group">
                <input type="submit" value="Select New Member for Project" class="btn btn-default" />
            </div>
        </form>        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
